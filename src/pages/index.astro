---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Personal Site">
	<main>
		<div class="header-container">
			<div class="header-info">
				<img class="self-img" src="/imgs/self.png">
				<div class="header-text">
					<h1>Stephen Brink</h1>
					<h2>Software Engineer in Columbia, MO</h2>
				</div>
			</div>
		</div>
		<div class="main-info">
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		display: flex;
		flex-direction: column;
		height: 100%;
	}
	.self-img {
		border-radius: 45px;
		width: 150px;
		height: 150px;
	}
	.header-container {
		min-width: 500px;
		display: flex;
	}
	.header-info {
		display: flex;
		flex-direction: column;
		align-items:flex-start;
		margin: 20px;
	}
	.header-text h1 {
		font-size: 40px;
		font-weight: 500;
		color: black;
		margin: 0;
	}
	.header-text h2 {
		font-size: 20px;
		font-weight: 400;
		color: #5f5f5f;
		margin: 0;
	}
	.main-info {
		margin: 50px;
	}
</style>
